
@model ReflectionIT.Mvc.Paging.PagingList<ASPCore_Final.Models.HoaDon>
@using ReflectionIT.Mvc.Paging;
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="outer-w3-agile mt-3">
    <h4 class="tittle-w3-agileits mb-4">Danh sách hóa đơn</h4>
    <form method="get" class="form-inline">
        <input name="searchString" class="form-control" placeholder="Search..."
               value="@Model.RouteValue["searchString"]" />
        <button type="submit" class="btn btn-info">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
        </button>
    </form>
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaHd)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.NgayDat)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.SdtNguoinhan)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.GhiChu)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.PhiVanChuyen)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaTrangThai)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaKhNavigation)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.MaTrangThaiNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MaHd)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.NgayDat)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.SdtNguoinhan)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.GhiChu)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.PhiVanChuyen)
                    </td>
                    <td scope="row">
                        <a asp-action="ChangeStatus" asp-route-id="@item.MaHd" class="btn-active"> @Html.Raw(item.MaTrangThai == 0 ? "<strong>Chưa Duyệt</strong>" : "Đã Duyệt")</a>
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MaKhNavigation.Email)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaHd" class="btn btn-primary">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-primary">Xem chi tiết</a> |

                        <button type="button" class="btn btn-primary" onclick="return _delete()" id="btnDelete">Xóa</button>
                        <script>
                            function _delete() {
                                var cf = confirm('Bạn có muốn xoá hóa đơn này?');
                                if (cf) {
                                    $.ajax({
                                        url: '/api/HoaDons/' + @item.MaHd,
                                        type: "Delete",
                                        contentType: "application/json; charset=utf-8",
                                        dataType: "json",
                                        async: true,
                                        success: function (result) {
                                            alert("Xoá hóa đơn thành công");
                                        },
                                        error: function (errormessage) {
                                            alert(errormessage.responseText);
                                        }
                                    });
                                }
                            }
                        </script>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav class="navbar-default justify-content-center">


        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model, @searchString = @ViewBag.SearchString, @class = "page-item" })


    </nav>

</div>